#!/usr/bin/env bash

# TODO: nodesource node install?

# google public key + sources list
wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | sudo apt-key add -
echo "deb http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list
#echo "deb http://dl.google.com/linux/talkplugin/deb/ stable main" > /etc/apt/sources.list.d/google-talkplugin.list

#add-apt-repository ppa:staticfloat/juliareleases for package julia
apt-get update
apt-get upgrade

apps=(
  #cheese      # camera tester
  #clementine  # music player
  #couchdb     # json database
  google-chrome-stable  # stable chrome from googles repo
  #google-talkplugin     # google talk plugin (still needed?)
  grc       # generic colouriser
  guake     # quake like terminal manager
  hexchat   # IRC
  pidgin    # XMPP
  mumble    # MP voice com
  #nodejs   # disabled - compile from source
  redshift  # monitor night brightener
  screen    # screen manager
  steam     # TF2
  #sublime-text # not sure if repos has ST3
  vlc       # video player
  xclip     # for redirecting to clipboard via `<` (used in git file)
)

for i in ${apps[@]}
do
  echo $i
  apt-get install -y -qq $i
done
