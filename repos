#!/usr/bin/env bash

globalModules=(
  jshint      # static analysis
  jsontool    # curl jsonUrl | json key
  nd          # nd `moduleName` for README.md in stdout
  tap         # for tests
  pkginit     # for quick making a npm module shell (though bugged atm)
  browserify  # npm style webapps
  sparklines  # create histograms in your terminal with `sparkline 2 3 4`
  bower       # because web components seem to go in this
)
for i in ${globalModules[@]}
do
  echo $i
  npm install -g $i
done

pkginit add default pkg.json


cd && cd repos

# private bitbucket repos
privates=(
  deathmatch
  meshrtc
  sexify
)
for i in ${privates[@]}
do
  echo $i
  git clone git@bitbucket.org:clux/$i.git
done

modules=(
  autonomy
  blog
  cleverbot-irc
  combustion
  confortable
  curvefever-stats
  decay
  dotclux
  dye
  fsx
  gu
  icebreaker
  interlude
  linkr-components
  logule
  operators
  posts
  sdp-transform
  splitter
  statesoftheworld
  subset
  symlink
  topiary
  tournament
  tournament-components
  trials
  tub
  typr
  vitae
  wolfram-alpha
  wolfram-irc
  wrappers
)

for i in ${modules[@]}
do
  echo $i
  git clone git@github.com:clux/$i.git
done

