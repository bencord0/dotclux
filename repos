#!/usr/bin/env bash

# only set prefix if we didn't install from source
#npm config set prefix ~/npm
#npm config set loglevel info

globalModules=(
  ansimd      # markdown viewer terminal
  jshint      # static analysis
  jsonlint    # analysis of json files
  json        # curl jsonUrl | json key
  nd          # nd `moduleName` for README.md in stdout
  npm         # alwyas update this
  pkginit     # for quick making a npm module shell (though bugged atm)
  browserify  # npm style webapps
  testling    # for browser tests
  asciify     # CLI asciifier
  ytdl        # streaming youtube downloader
  symlink     # node module link helper
  badgify     # readme badge generator
  bower       # web components currently here..
  # tests
  nodeunit
  tap
  coveralls
  jscoverage
  vulcanize   # polymer concat
)
for i in ${globalModules[@]}
do
  echo $i
  npm install -g $i
done

pkginit add default pkg.json

cd && cd repos

# private bitbucket repos
privates=(
  deathmatch
  meshrtc
)
for i in ${privates[@]}
do
  echo $i
  git clone git@bitbucket.org:clux/$i.git
done

# tournament related modules
cd && cd repos
mkdir tournament && cd tournament
trn=(
  duel
  ffa
  ffa-tb
  group
  groupstage
  groupstage-tb
  groupstage-tb-duel
  masters
  roundrobin
  tiebreaker
  tournament
  tournament-components
  tourney
)
for i in ${trn[@]}
do
  echo $i
  git clone git@github.com:clux/$i.git
done

misc=(
  autonomy
  #badgify
  blog
  cleverbot-irc
  combustion
  confortable
  curvefever-bot
  curvefever-stats
  decay
  dotclux
  dye
  gu
  icebreaker
  interlude
  irc-stream
  linkr-app
  linkr-components
  logule
  npm-graph
  operators
  posts
  preservative
  sdp-transform
  splitter
  subset
  #symlink
  tabexplode
  tf2configs
  topiary
  trials
  tub
  unitednationsoftheworld
  vitae
  wolfram-alpha
  wolfram-irc
  wrappers
)

cd && cd repos

for i in ${misc[@]}
do
  echo $i
  git clone git@github.com:clux/$i.git
done

cd
symlink repos repos/tournament -g nodeunit -g jscoverage -g coveralls --execute
