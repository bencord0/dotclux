#!/usr/bin/env bash

globalModules=(
  jshint      # static analysis
  jsonlint    # analysis of json files
  jsontool    # curl jsonUrl | json key
  nd          # nd `moduleName` for README.md in stdout
  tap         # for tests
  pkginit     # for quick making a npm module shell (though bugged atm)
  browserify  # npm style webapps
  testling    # for browser tests
  bower       # because web components seem to go in this
  asciify     # CLI asciifier
  ytdl        # streaming youtube downloader
)
for i in ${globalModules[@]}
do
  echo $i
  npm install -g $i
done

pkginit add default pkg.json


cd && cd repos

# private bitbucket repos
privates=(
  deathmatch
  meshrtc
  sexify
)
for i in ${privates[@]}
do
  echo $i
  git clone git@bitbucket.org:clux/$i.git
done

modules=(
  autonomy
  blog
  cleverbot-irc
  combustion
  confortable
  curvefever-bot
  curvefever-stats
  decay
  dotclux
  duel
  dye
  ffa
  ffa-tb
  fsx
  group
  groupstage
  groupstage-tb
  gu
  icebreaker
  interlude
  irc-stream
  linkr-components
  logule
  masters
  operators
  posts
  sdp-transform
  splitter
  statesoftheworld
  subset
  symlink
  roundrobin
  tabexplode
  tiebreaker
  topiary
  tournament
  tournament-components
  tourney
  trials
  tub
  typr
  vitae
  wolfram-alpha
  wolfram-irc
  wrappers
)

for i in ${modules[@]}
do
  echo $i
  git clone git@github.com:clux/$i.git
done

